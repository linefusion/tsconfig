{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@wolfpkgs/tsconfig/default",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": [
    "out",
    "dist",
    "node_modules",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
